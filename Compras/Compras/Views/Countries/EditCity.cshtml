
@model Compras.Models.CityViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="StateID" />

          <partial name="_City"/>
           
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-outline-primary"  />
                <a asp-action="DetailsState" asp-route-id="@Model.StateID" class="btn btn-outline-success" >Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}